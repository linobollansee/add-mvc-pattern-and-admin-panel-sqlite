{% extends "admin/layout.njk" %} {% block content %} {# Page header with title
and "New Author" button #}
<div
  class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
>
  <h1 class="h2">Manage Authors</h1>
  <div class="btn-toolbar mb-2 mb-md-0">
    <a href="/admin/authors/new" class="btn btn-primary">
      <i class="bi bi-plus-circle"></i> New Author
    </a>
  </div>
</div>

{# Search form #}
<div class="row mb-3">
  <div class="col-md-6">
    <form action="/admin/authors" method="GET" class="d-flex">
      <input
        type="search"
        name="search"
        class="form-control me-2"
        placeholder="Search authors..."
        value="{{ searchQuery }}"
      />
      <button type="submit" class="btn btn-outline-secondary">
        <i class="bi bi-search"></i> Search
      </button>
    </form>
  </div>
</div>

{# No authors message #} {% if authors.length === 0 %}
<div class="alert alert-info">
  {% if searchQuery %} No authors found matching "{{ searchQuery }}". {% else %}
  No authors available. Create your first author! {% endif %}
</div>
{% else %} {# Authors table #}
<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>Posts</th>
        <th>Created</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {% for author in authors %}
      <tr>
        <td>{{ author.id }}</td>
        <td>
          <strong>{{ author.name }}</strong>
          {% if author.bio %}
          <br />
          <small class="text-muted">{{ author.bio | truncate(60) }}</small>
          {% endif %}
        </td>
        <td>{{ author.email if author.email else '-' }}</td>
        <td>
          {% if author.post_count %}
          <span class="badge bg-secondary"
            >{{ author.post_count }} post(s)</span
          >
          {% else %}
          <span class="badge bg-light text-dark">0 posts</span>
          {% endif %}
        </td>
        <td>{{ author.created_at | date('MMM D, YYYY') }}</td>
        <td>
          <div class="btn-group btn-group-sm" role="group">
            <a
              href="/admin/authors/{{ author.id }}/edit"
              class="btn btn-outline-primary"
              title="Edit"
            >
              <i class="bi bi-pencil"></i>
            </a>
            <form
              action="/admin/authors/{{ author.id }}/delete"
              method="POST"
              style="display: inline"
              onsubmit="return confirm('Are you sure you want to delete this author? Their posts will remain but show no author.');"
            >
              <button
                type="submit"
                class="btn btn-outline-danger btn-sm"
                title="Delete"
              >
                <i class="bi bi-trash"></i>
              </button>
            </form>
          </div>
        </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
{% endif %} {% endblock %}
